             xmlns:ViewModels="clr-namespace:BanNuochoa.ViewModels"
             BackgroundColor="{StaticResource PrimaryColor}"
             mc:Ignorable="d"
             x:Class="BanNuochoa.Views.OrderPage">

    <ContentPage.Content>
